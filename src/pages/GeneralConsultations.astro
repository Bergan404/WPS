---
import Layout from '../layouts/Layout.astro';

import Image from 'astro/components/Image.astro';

import KeyPoints from '../components/KeyPoints.astro';
import ContactBox from '../components/ContactBox.astro';

import Violations from "../assets/images/WPS-General_consultations.png";
import Agreement from "../assets/images/agreement.png";
import House from "../assets/images/house.png";
import Book from "../assets/images/book.png";
import Clock from "../assets/images/clock.png"
---

<Layout title="WPS - General Consultations">
	<header class="hero container">
        <Image src={Violations} alt="Plans" id="houseopen"/>
		<div class="overlay"></div>
		<div class="hero-content">
			<h4 class="baskervville-regular">WHIDDON PROPERTY SOLUTIONS</h4>
			<h2 class="bold">General Consultations</h2>
            <p>Expert advice is just a call away. Whether you're facing complex property issues or need general guidance, Whiddon Property Solutions is here to help.</p>
		</div>
	</header>

	<section class="text_content_background">
		<div class="container py-3">
			<h4 class="baskervville-regular text-center">Comprehensive Guidance for Property Owners</h4>
            <p class="text-center py-3">Our consultations cover a wide range of property challenges, from navigating city ordinances and regulations to resolving complex legal issues. No matter the difficulty, our experienced team will provide you with tailored solutions.</p>

			<h4 class="baskervville-regular text-center">Why Choose Whiddon Property Solutions for Your Consultation?</h4>

            <div class="row gap-2">
                <KeyPoints
                    imagePath={Clock}
                    text="Around-the-clock availability."
                />
                <KeyPoints
                    imagePath={Book}
                    text="In-depth knowledge of Broward County regulations."
                />
                <KeyPoints
                    imagePath={House}
                    text="Over a decade of experience resolving complex property issues."
                />
                <KeyPoints
                    imagePath={Agreement}
                    text="Dedicated team for personalized support."
                />
            </div>

			<ContactBox
				text="Need Help with General Consultations? Contact Us Today for a Free Consultation."
			/>

		</div>
	</section>
</Layout>

<style>
	header {
		margin: auto;
		padding: 1rem;
		/* width: 800px; */
		/* max-width: calc(100% - 2rem); */
		color: white;
		font-size: 20px;
		line-height: 1.6;
		height: 100vh;
	}
	#houseopen {
		position: absolute;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
        width: 100%;
        height: 100%;
	}
	.hero-content {
		display: grid;
		place-content: center;
		height: 100vh;
		width: 100%;
		z-index: 10;
		position: relative;
		text-align: center;
	}
	.home_content {
		background-size: cover;
	}
	.image_box img{
		width: 100%;
		height: 100%;
	}
</style>
