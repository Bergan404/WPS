---
import Layout from '../layouts/Layout.astro';

import ContactBox from '../components/ContactBox.astro';
import HeroSection from '../components/HeroSection.astro';

import Violations from "../assets/images/WPS-General_consultations.png";

---

<Layout title="WPS - Contact">
    <HeroSection
		imagePath={Violations}
		title="Contact"
		body="Feel Free To Call Or Visit Whiddon Property Solutions"
	/>

	<section class="text_content_background">
		<div class="container py-3">
			<h4 class="baskervville-regular text-center">Phone</h4>
            <p class="text-center py-3">(954)-649-7315 or (954)-649-7444</p>

            <!-- COMING SOON -->
            <!-- <h4 class="baskervville-regular text-center">Email</h4>
            <p class="text-center py-3">(954)-649-7315 or (954)-649-7444</p> -->

            <h4 class="baskervville-regular text-center">Address</h4>
            <p class="text-center py-3">777 South Federal Highway Fort Lauderdale, Florida 33316</p>

			<ContactBox
				text="For a free consultation, contact us at (954) 649-7315 or (954) 649-7444."
			/>

		</div>
	</section>
</Layout>

<style>
	.home_content {
		background-size: cover;
	}
	.image_box img{
		width: 100%;
		height: 100%;
	}
</style>
