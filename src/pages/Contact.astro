---
import Layout from '../layouts/Layout.astro';

import ContactBox from '../components/ContactBox.astro';
import HeroSection from '../components/HeroSection.astro';
import AboutHeroSection from '../components/AboutHeroSection.astro';

import ContactForm from '../components/extra/contact_form.astro';

import Violations from "../assets/images/WPS-General_consultations.png";

---

<Layout title="WPS - Contact">
    <!-- <HeroSection
		imagePath={Violations}
		title="Contact"
		body="Feel Free To Call Or Visit Whiddon Property Solutions"
	/> -->

	<AboutHeroSection
			imagePath={Violations}
			title="Contact"
			body="Feel Free To Call Or Visit Whiddon Property Solutions"
		/>

	<section class="text_content_background">
		<div class="container py-3">

			<div class="row py-3 justify-content-center gap-3">
				<div class="col-lg-3 col-sm-7 col-10 text-center">
					<i class="fa-solid fa-phone"></i>
					<h4 class="baskervville-regular text-center">Phone</h4>
					<span>(954)-649-7315<br>(954)-649-7444</span>
				</div>
				<div class="col-lg-3 col-sm-7 col-10 text-center">
					<i class="fa-solid fa-envelope"></i>
					<h4 class="baskervville-regular text-center">Email</h4>
					<span>info@whiddonpropertysolutions.com</span>
				</div>
				<div class="col-lg-3 col-sm-7 col-10 text-center">
					<i class="fa-solid fa-location-dot"></i>
					<h4 class="baskervville-regular text-center">Address</h4>
					<span>777 South Federal Highway <br> Fort Lauderdale, Florida 33316</span>
				</div>
			</div>

			<h4 class="baskervville-regular text-center">Complete the Short Form Below</h4>
			<p class="text-center">We will get back to you as soon as possible.</p>
			<ContactForm />

		</div>
	</section>
</Layout>

<style>
	.home_content {
		background-size: cover;
	}
	.image_box img{
		width: 100%;
		height: 100%;
	}
	i {
		font-size: 2em;
		color: #536F9A;
	}
</style>
